<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MoviesCatalog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:colorBackground">@color/dark</item>
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/alexandria_medium</item>
    </style>

    <style name="PlayerActivityTheme" parent="Theme.MoviesCatalog">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Common Activity Properties -->
        <item name="android:screenOrientation">sensorLandscape</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
</resources>